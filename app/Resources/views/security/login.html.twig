{% extends 'baseadmin.html.twig' %}
{% block body %}
    <form action="{{ path('login') }}" method="post" style="width: 500px; margin: 0 auto; margin-top: 200px;">
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            <label for="exampleInputEmail1">Username</label>
            <input name="_username" type="text" class="form-control" placeholder="Enter username" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="_password" type="password" class="form-control" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
{% endblock %}